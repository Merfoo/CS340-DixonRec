<script defer src="./js/members.js"></script>
<section class="section">
    <div class="container">
        <h1 class="title">
            Add Member
        </h1>

        <div class="field">
            <label class="label">First Name</label>
            <div class="control">
                <input class="input" type="text" name="fname" placeholder="Vincent">
            </div>
        </div>

        <div class="field">
            <label class="label">Last Name</label>
            <div class="control">
                <input class="input" type="text" name="lname" placeholder="Kliman">
            </div>
        </div>              

        <div class="field">
            <label class="label">Trainer's Name</label>
            <div class="select">
                <select id="trainerId">
                    <option value="-1">None</option>
                    {{#each trainers}}
                    <option value="{{id}}">{{firstName}} {{lastName}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button id="submit" class="button is-link">Submit</button>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <h1 class="title">
            Search Member
        </h1>

        <div class="field">
            <div class="control">
                <label class="label">First Name</label>
                <input class="input" type="text" name="fnameSearch" placeholder="John">
                <label class="label">Last Name</label>
                <input class="input" type="text" name="lnameSearch"placeholder="Doe">
            </div>
        </div> 

        <div class="field">
            <div class="control">
                <button id="search" class="button is-link">Search</button>
            </div>
        </div>

        <h1 class="title">Search Results</h1>
        <table class="table" id="SearchResultTable">
            <tr>
                <th>Member Name</th>
            </tr>

        </table>
    </div>
</section>
<section class="section">
    <div class="container">
        <h1 class="title">Members</h1>
        <table class="table">
            <tr>
                <th>Member Name</th>
                <th>Trainer Name</th>
            </tr>
            {{#each members}}
            <tr>
                <td>{{mFirstName}} {{mLastName}}</td>
                <td>{{tFirstName}} {{tLastName}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
</section>
