    <section class="section">
    <div class="container">
        <h1 class="title">
            Add Instructor
        </h1>

        <div class="field">
            <label class="label">First Name</label>
            <div class="control">
                <input class="input" type="text" name="fname" placeholder="Vincent">
            </div>
        </div>

        <div class="field">
            <label class="label">Last Name</label>
            <div class="control">
                <input class="input" type="text" name="lname" placeholder="Kliman">
            </div>
        </div>              

        <div class="field">
            <label class="label">Sex</label>
            <div class="control">
                <div class="select">
                    <select id="sex">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
            </div>
        </div>
        
        <div class="field">
            <label class="label">Description</label>
            <div class="control">
                <textarea class="textarea" name="description" placeholder="Textarea"></textarea>
            </div>
        </div>
        
        <div class="field">
            <div class="control">
                <button class="button is-link">Submit</button>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <h1 class="title">Instructors</h1>
        <table class="table">
            <tr>
                <th>Instructor Name</th> 
                <th>Sex</th>
                <th>Description</th>
            </tr>
            {{#each instructors}}
            <tr>
                <td>{{iFirstName}} {{iLastName}}</td>
                <td>{{iSex}}</td> 
                <td>{{iDescription}}</td>  
            </tr>
            {{/each}}
        </table>
    </div>
</section>
